<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Lzham\**" />
    <EmbeddedResource Remove="Lzham\**" />
    <None Remove="Lzham\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="liblzham-decompress.dll" />
    <None Remove="lzham_api.dll" />
    <None Remove="lzham_x64.dll" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="lzham_api.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="lzham_x64.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
	  <PackageReference Include="SevenZip" Version="19.0.0" />
	  <PackageReference Include="ZstdNet" Version="1.4.5" />
	  <PackageReference Include="UbiServices" Version="23.1.21" />
	  <PackageReference Include="UplayKit" Version="0.0.0.6" />
  </ItemGroup>

</Project>
